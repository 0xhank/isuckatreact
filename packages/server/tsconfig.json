    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ES2022"],
        "outDir": "dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
